<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="8dp">
    <TextView
        android:id="@+id/text_message_incoming"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/receive_bubble_chat"
        android:lineSpacingExtra="2dp"
        android:paddingStart="20dp"
        android:paddingTop="4dp"
        android:paddingEnd="10dp"
        android:paddingBottom="10dp"
        android:textColor="@color/pink"
        android:textSize="13.5sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_max="wrap"
        app:layout_constraintWidth_percent="0.8"
        />

    <TextView
        android:id="@+id/text_message_incoming_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/text_message_incoming"
        app:layout_constraintLeft_toRightOf="@id/text_message_incoming"
        android:layout_marginStart="2dp"
        android:textSize="11sp"
        android:textColor="@color/pink"
        />
</androidx.constraintlayout.widget.ConstraintLayout>